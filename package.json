{
  "name": "cfdi-sat-nodejs",
  "version": "3.1.0",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "watch": "tsc --watch",
    "build": "tsup src/index.ts --format esm,cjs --dts --outDir dist && copyfiles -u 1 \"src/resources/**/*\" dist",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "keywords": [
    "nodejs",
    "sat",
    "cfdi",
    "carta porte",
    "xml",
    "json"
  ],
  "author": "Luis Martinez",
  "license": "MIT",
  "description": "Herramienta para generar y manejar CFDI 4.0. Incluye utilidades para trabajar con certificados digitales, generar XML o JSON sellados y sin sellar",
  "repository": {
    "type": "git",
    "url": "https://github.com/Luisjossam/cfdi-sat-nodejs.git"
  },
  "bugs": {
    "url": "https://github.com/Luisjossam/cfdi-sat-nodejs/issues"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@types/node-forge": "^1.3.11",
    "@types/stream-json": "^1.7.8",
    "@types/uuid": "^10.0.0",
    "copyfiles": "^2.4.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitepress": "^1.6.3"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.9.8",
    "fast-xml-parser": "^5.2.5",
    "node-forge": "^1.3.1",
    "saxon-js": "^2.7.0",
    "stream-json": "^1.9.1",
    "uuid": "^11.1.0",
    "xmlbuilder2": "^3.1.1",
    "xpath": "^0.0.34"
  }
}
